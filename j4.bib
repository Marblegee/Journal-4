	journal = {Science China Life Sciences},
	author = {Tian, Xiaomeng and Li, Ran and Fu, Weiwei and Li, Yan and Wang, Xihong and Li, Ming and Du, Duo and Tang, Qianzi and Cai, Yudong and Long, Yiming and Zhao, Yue and Li, Mingzhou and Jiang, Yu},
	month = may,
